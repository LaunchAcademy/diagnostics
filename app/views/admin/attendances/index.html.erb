<h2>Attendence</h2>
<h6>Date: <%= format_datetime(@date) %></h6>

<div class="columns medium-6">
  <div class="panel">
    <h3>Present:</h3>
    <ul>
      <% @present_students.each do |student| %>
        <li><%= student.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="columns medium-6">
  <div class="panel">
    <h3>Absent:</h3>
    <ul>
      <% @absent_students.each do |student| %>
      <li><%= student.name %></li>
      <% end %>
    </ul>
  </div>
</div>
