<h2>Attendence</h2>
<%= form_tag admin_attendances_path, method: :get do %>
  <%= label_tag :date %>
  <%= date_field_tag :date, @date %>
  <%= submit_tag "Submit" %>
<% end %>

<div class="columns medium-6">
  <div class="panel">
    <h3>Present:</h3>
    <ul>
      <% @present_students.each do |student| %>
        <li><%= student.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="columns medium-6">
  <div class="panel">
    <h3>Absent:</h3>
    <ul>
      <% @absent_students.each do |student| %>
      <li><%= student.name %></li>
      <% end %>
    </ul>
  </div>
</div>
